<% if current_message.message == 'Sounds good' %>
  - reply_type: text
    replies:
      - text: "::smile::"
      - text: "Okay, first — how many children do you have?"
    slider_input: true
    slider_min: 1
    slider_max: 10
<% else %>
  - reply_type: text
    replies:
      - text: "Yup... I promise I’m using your answers to improve how I support you (and others like you)."
      - text: "You are always welcome to choose 'skip' if you’d rather not tell me something — no hard feelings!"
      - text: "Okay, first — how many children do you have?"
    slider_input: true
    slider_min: 1
    slider_max: 10
<% end %>